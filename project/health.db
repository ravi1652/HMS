-- Create a table for diseases
CREATE TABLE Disease (
    id INTEGER PRIMARY KEY,
    name TEXT NOT NULL,
    symptoms TEXT NOT NULL,
    medicine TEXT,
    curable BOOLEAN NOT NULL
);

